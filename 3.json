[
  {
    $lookup: {
      from: "comments",
      localField: "_id",
      foreignField: "movie_id",
      as: "comments"
    }
  },
  {
    $addFields: {
      commentCount: { $size: "$comments" }
    }
  },
  {
    $project: {
      title: 1,
      imdbRating: "$imdb.rating",
      commentCount: 1
    }
  },
  {
    $sort: { imdbRating: -1 }
  },
  {
    $limit: 5
  }
]
